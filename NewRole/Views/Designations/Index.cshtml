@model IEnumerable<NewRole.Models.DataBind.Designation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var listTblUserRole = (List<NewRole.Models.DataBind.TblUserRole>)Session["TblUserRoles"];
}

<h2>Index</h2>

<p>
    @if (listTblUserRole.Where(o => o.PageName == "Designations" && o.IsCreate == true).FirstOrDefault() != null)
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DesignationName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>

                @if (listTblUserRole.Where(o => o.PageName == "Designations" && o.IsUpdate == true).FirstOrDefault() != null)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.DesignationId })
                }
                |
                @if (listTblUserRole.Where(o => o.PageName == "Designations" && o.IsRead == true).FirstOrDefault() != null)
                {
                    @Html.ActionLink("Details", "Details", new { id = item.DesignationId })
                }
                |
                @if (listTblUserRole.Where(o => o.PageName == "Designations" && o.IsDelete == true).FirstOrDefault() != null)
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.DesignationId })
                }
            </td>
        </tr>
    }

</table>
