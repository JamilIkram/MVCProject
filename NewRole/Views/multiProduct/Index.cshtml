@model NewRole.ViewModels.VmSupplierWiseProduct
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-s pull-s">
        <h4>Supplier </h4>
        <p>
            <a href="/multiProduct/Create" class="btn btn-sm btn-success">Create New</a>
        </p>
        <table>
            <tr>
                <th>
                    Avaiable
                </th>
                <th>
                    Supply Proudct
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.SupplierList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplier_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <a href="/multiProduct/Index?id=@item.supplier_id" class="btn btn-sm btn-primary">Details</a> |
                        <a href="/multiProduct/EditMultiple?id=@item.supplier_id" class="btn btn-sm btn-warning">Edit</a> |
                        <a href="/multiProduct/DeleteMultiple?id=@item.supplier_id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this category with products?')">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-s7 push-s">
        <h4>Products of @Model.supplier_name</h4>
        <p>
            <a href="/multiProduct/Create" class="btn btn-sm btn-success">Create New</a>
        </p>
        <table class="table">
            <tr>
                <th>
                    Supplier
                </th>
                <th>
                    Product
                </th>
                <th>
                    Price
                </th>
                <th>
                    SupplyDate
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    ImagePath
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.ProductList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.supplier_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupplyDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        <img src="@item.ImagePath" style="height:150px" />
                    </td>
                    <td>
                        <a href="/multiProduct/Edit?id=@item.ProductId" class="btn btn-sm btn-warning">Edit</a> |
                        <a href="/multiProduct/Delete?id=@item.ProductId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure to delete this product?')">Delete</a>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>

